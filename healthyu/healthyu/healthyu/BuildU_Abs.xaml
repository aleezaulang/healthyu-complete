<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="healthyu.BuildU_Abs">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#f7faff">
            <Frame CornerRadius="100"
                   BackgroundColor="White"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0">
                <Image Source="build_abs.png"/>
            </Frame>

            <Frame CornerRadius="20"
                   Padding="10,10,10,10"
                   Margin="5,10,5,10"
                   BackgroundColor="White"
                   VerticalOptions="Center">
                <StackLayout>
                    <Label Text="Abs"
                           TextColor="Gray"
                           FontSize="48"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label TextColor="Gray"
                           FontSize="Medium"
                           Text="great exercies for the abs are doing planking, reverse crunches and also doing mountain climbers"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>